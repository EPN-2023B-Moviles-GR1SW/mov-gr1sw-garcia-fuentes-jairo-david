<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_cancion"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    tools:context=".CancionActivity">

    <ListView
        android:id="@+id/list_cancion"
        android:layout_width="335dp"
        android:layout_height="328dp"
        android:background="@color/gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.645" />

    <Button
        android:id="@+id/btn_crear_cancion"
        android:layout_width="67dp"
        android:layout_height="48dp"
        android:layout_marginStart="32dp"
        android:background="@color/primary"
        android:text="Crear"
        android:textColor="#EEF0E5"
        app:layout_constraintBottom_toBottomOf="@+id/txt_artista"
        app:layout_constraintStart_toEndOf="@+id/txt_artista"
        app:layout_constraintTop_toTopOf="@+id/txt_artista"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/txt_artista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="140dp"
        android:text="Canciones"
        android:textColor="@color/primary"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/list_cancion"
        app:layout_constraintEnd_toEndOf="@+id/list_cancion"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="@+id/list_cancion" />

    <TextView
        android:id="@+id/txt_edad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Edad"
        app:layout_constraintBottom_toTopOf="@+id/txt_estado"
        app:layout_constraintEnd_toEndOf="@+id/txt_estado"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txt_estado" />

    <TextView
        android:id="@+id/txt_estado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Estado"
        app:layout_constraintBottom_toTopOf="@+id/txt_patrimonio"
        app:layout_constraintEnd_toEndOf="@+id/txt_patrimonio"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txt_patrimonio" />

    <TextView
        android:id="@+id/txt_patrimonio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Patrimonio"
        app:layout_constraintBottom_toTopOf="@+id/textView10"
        app:layout_constraintEnd_toEndOf="@+id/textView10"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView10" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="Canciones:"
        app:layout_constraintBottom_toTopOf="@+id/list_cancion"
        app:layout_constraintEnd_toEndOf="@+id/list_cancion"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/list_cancion" />
</androidx.constraintlayout.widget.ConstraintLayout>