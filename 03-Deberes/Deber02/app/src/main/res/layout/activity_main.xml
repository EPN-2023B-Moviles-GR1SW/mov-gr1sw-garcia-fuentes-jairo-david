<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_artistas"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray">

    <TextView
        android:id="@+id/txt_artistas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:text="Artistas"
        android:textColor="@color/primary"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/list_artista"
        app:layout_constraintEnd_toEndOf="@+id/list_artista"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="@+id/list_artista" />

    <Button
        android:id="@+id/btn_crear_artista"
        android:layout_width="67dp"
        android:layout_height="48dp"
        android:layout_marginStart="48dp"
        android:background="@color/primary"
        android:text="Crear"
        android:textColor="#EEF0E5"
        app:layout_constraintBottom_toBottomOf="@+id/txt_artistas"
        app:layout_constraintStart_toEndOf="@+id/txt_artistas"
        app:layout_constraintTop_toTopOf="@+id/txt_artistas"
        app:layout_constraintVertical_bias="0.0" />

    <ListView
        android:id="@+id/list_artista"
        android:layout_width="340dp"
        android:layout_height="520dp"
        android:background="@color/gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.73" />

</androidx.constraintlayout.widget.ConstraintLayout>